<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"
            android:text="YO BOY"
            android:textSize="20sp" />

        <Button
            android:id="@+id/auctionlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"

            android:background="#000"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Auction List"
            android:textColor="#DDD" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:text="TIME"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/budget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_budget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:autoSizeTextType="uniform"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="My Cash" />

        <LinearLayout
            android:id="@+id/opponent_budget1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:id="@+id/opp1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0.4dp"
                android:layout_weight="0.5"
                android:autoSizeTextType="uniform"
                android:background="@drawable/underline"
                android:gravity="center"
                android:padding="3dp"
                android:text="My Cash" />

            <TextView
                android:id="@+id/opp2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0.4dp"
                android:layout_weight="0.5"
                android:autoSizeTextType="uniform"
                android:background="@drawable/underline"
                android:gravity="center"
                android:padding="3dp"

                android:text="My Cash" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opponent_budget2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"

            android:orientation="vertical">


            <TextView
                android:id="@+id/opp3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0.4dp"
                android:layout_weight="0.5"
                android:autoSizeTextType="uniform"
                android:background="@drawable/underline"
                android:gravity="center"
                android:padding="3dp"
                android:text="My Cash" />

            <TextView
                android:id="@+id/opp4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0.4dp"
                android:layout_weight="0.5"
                android:autoSizeTextType="uniform"
                android:background="@drawable/underline"
                android:gravity="center"
                android:padding="3dp"
                android:text="My Cash" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.3"
        android:background="#272"

        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Batsman"
                android:textColor="#DD3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="center"

                android:text="Right Arm Off Spin"
                android:textColor="#DDD"
                android:textSize="8sp"
                android:textStyle="italic" />
        </LinearLayout>
            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="NAME"
                android:textColor="@color/player_info"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/bg2"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:text="BAT "
                android:textColor="@color/player_info" />
            <ProgressBar
            android:id="@+id/battingRating"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:progress="50"
            android:secondaryProgress="100"
            android:scaleY="1"/>
            <TextView
                android:id="@+id/battingRatingTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="90"
                android:textColor="#DD3"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:textColor="@color/player_info"
                android:text="BOWL"/>
            <ProgressBar
                android:id="@+id/bowlingRating"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:progress="50"
                android:secondaryProgress="100"
                android:progressTint="#ff0600"
                android:scaleY="1"/>
            <TextView
                android:id = "@+id/bowlingRatingTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="90"
                android:textColor="#DD3"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            />
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/Nationality"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/bg2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"

        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buy"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:text="25.5"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/clock"
            android:gravity="center"
            android:textColor="#D00"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="BIDDING CLOSED"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
<TextView android:id="@+id/totalPlayers"
    android:layout_gravity="end"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_width="wrap_content"
    android:text="?/17"
    android:textColor="#000"
    android:padding="10dp"
    android:background="@drawable/border"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingLeft="2dp"
    android:background="#333"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingRight="2dp"
        android:gravity="top"
        android:orientation="vertical">
        <Button
            android:id="@+id/squad_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:text="FULL"
            />

        <ImageButton
            android:id="@+id/squad_bat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bat01"
            />
        <ImageButton
            android:id="@+id/squad_ball"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ball2"
            />
        <ImageButton
            android:id="@+id/squad_allrounder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/allrounder"
            />

        <ImageButton
            android:id="@+id/squad_wk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/wicketkeeper"
            />


    </LinearLayout>



    <ListView
        android:id="@+id/squad"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"


        android:background="#222"
        android:divider="#777"
        android:dividerHeight="2dp"
        android:padding="3dp"
        android:textColor="#FFF"
        android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>