<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bckg"

    android:orientation="vertical"
    android:padding="20dp"

    tools:context=".OpeningActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <EditText
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#2000"
        android:paddingLeft="30dp"
        android:hint="Enter User Name"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginLeft="10dp"
        android:background="#9070"
         android:text="LOG IN"
        android:textColor="#D000"
        android:textSize="20sp"
        android:textStyle="bold" />

    </LinearLayout>

        <TextView
            android:id="@+id/userList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:background="#5000"
            android:padding="10dp"
            android:paddingLeft="40dp"
            android:text="USERS:"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">
            <Button
                android:id="@+id/newAuction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#D004"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="NEW"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/continueAuction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#4400"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="JOIN"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

</LinearLayout>
